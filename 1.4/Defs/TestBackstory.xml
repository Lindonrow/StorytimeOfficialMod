<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AlienRace.AlienBackstoryDef Name="TestBackstories" Abstract="True"> 
	<spawnCategories>
      <li>TestCategory</li>
    </spawnCategories>
  </AlienRace.AlienBackstoryDef>
  
  <AlienRace.AlienBackstoryDef ParentName="TestBackstories">
    <defName>Test</defName>
    <title>TestChild</title>
    <titleShort>test childhood backstory</titleShort>
    <baseDesc>[PAWN_nameDef] is a test.</baseDesc>
    <slot>Childhood</slot>
  </AlienRace.AlienBackstoryDef>

  <AlienRace.AlienBackstoryDef ParentName="TestBackstories">
    <defName>TestAdult</defName>
    <title>TestAdult</title>
    <titleShort>test adult backstory</titleShort>
    <baseDesc>[PAWN_nameDef] is a test.</baseDesc>
    <slot>Adulthood</slot>
	<bodyTypeGlobal>Fat</bodyTypeGlobal> <!-- The pawns don't come out fat more often than any other pawn -->
  </AlienRace.AlienBackstoryDef>

  <PawnKindDef>
    <defName>TestKind</defName>
	
    <race>Human</race>
    <label>test</label>
    <combatPower>55</combatPower>
    <defaultFactionType>PlayerColony</defaultFactionType>
    <isFighter>true</isFighter>
    <gearHealthRange>0.6~2</gearHealthRange>
	<backstoryFiltersOverride>
	  <li>
		<categories>
		  <li>TestCategory</li>
		</categories>
	  </li>
	</backstoryFiltersOverride>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
    <weaponMoney>100~500</weaponMoney>
    <techHediffsChance>0.04</techHediffsChance>
    <techHediffsMoney>200~700</techHediffsMoney>
    <techHediffsTags>
      <li>Poor</li>
      <li>Simple</li>
      <li>ImplantEmpireCommon</li>
    </techHediffsTags>
    <initialWillRange>1~4</initialWillRange>
    <initialResistanceRange>5~10</initialResistanceRange>
  </PawnKindDef>
  
</Defs>