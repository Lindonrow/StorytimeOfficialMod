<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
 <RecipeDef>
    <defName>MakeBronzeHatchet</defName>
    <label>Make Bronze Hatchet</label>
    <description>Forge a bronze hatchet.</description>    
	<jobString>Forge a hatchet.</jobString>
    <workAmount>2400</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>Smithing</researchPrerequisite>
    <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
	<recipeUsers>
      <li>ElectricSmithy</li>
      <li>FueledSmithy</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
					<thingDefs>
						<li>ST_Bronze</li>
					</thingDefs>
        </filter>
        <count>50</count>
      </li>
	  <li>
        <filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
					<thingDefs>
						<li>ST_Bronze</li>
						<li>WoodLog</li>
					</thingDefs>
    </fixedIngredientFilter>
	<products>
		<BronzeHatchet>1</BronzeHatchet>
	</products>
  </RecipeDef>
  
