<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Name="PartyHatBase" ParentName="ApparelBase" Abstract="True">
	<recipeMaker>
		  <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		  <workSkill>Crafting</workSkill>
		  <effectWorking>Tailor</effectWorking>
		  <soundWorking>Recipe_Tailor</soundWorking>
		  <researchPrerequisite>ComplexClothing</researchPrerequisite>
		  <recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
		  </recipeUsers>
		  <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PartyHat/PartyHat_ground</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>1800</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <generateCommonality>0.005</generateCommonality>
    <equippedStatOffsets>
		<SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <costList>
      <Cloth>25</Cloth>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>MedievalBasic</li>		
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
	  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PartyHat/PartyHat</wornGraphicPath>
    </apparel>
	<tradeTags>
		<li>StorytimePartyHats</li>
	</tradeTags>
  </ThingDef>
  
  <ThingDef ParentName="PartyHatBase">
