<!-- Steel Ring -->

  <ThingDef ParentName="STRingBase">
    <defName>ST_SteelRing</defName>
    <label>steel ring</label>
    <description>A simple steel ring similar to Jonah's Wedding Ring.</description>
    <graphicData>
      <texPath>Things/Items/Rings/SteelRing</texPath>
    </graphicData>
    <statBases>
      <ArmorRating_Sharp>0.10</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
    </statBases>
    <generateCommonality>0.1</generateCommonality>
    <costList>
      <Steel>25</Steel>
    </costList>
    <equippedStatOffsets>
      <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <apparel>
		  <tags>
			<li>IndustrialBasic</li>
			<li>MedievalBasic</li>
		  </tags>
    </apparel>
  </ThingDef>  
  
