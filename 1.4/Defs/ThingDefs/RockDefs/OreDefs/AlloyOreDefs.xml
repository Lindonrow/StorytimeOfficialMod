<Defs>

  <ThingDef ParentName="RockBase">
    <defName>ST_CopperOre</defName>
    <label>copper ore</label>
    <description>This needs refining.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(120, 80, 50)</color>
      <colorTwo>(170, 130, 80)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>800</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>ST_Copper</mineableThing>
      <mineableYield>45</mineableYield>
      <mineableScatterCommonality>0.5</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>10~30</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
