<?xml version="1.0" encoding="utf-8"?>
<Defs>
<AlienRace.ThingDef_AlienRace ParentName="BasePawn">
    <defName>Alien_Beet</defName>
    <label>beet</label>
    <description>A large, green person with tusks. Unclear whether friendly or not.</description>
    <alienRace>
      <generalSettings>
        <humanRecipeImport>true</humanRecipeImport>
        <maleGenderProbability>0.5</maleGenderProbability>
        <immuneToAge>false</immuneToAge>
        <canLayDown>true</canLayDown>
        <forcedRaceTraitEntries>
          <li>
            <defName>Tough</defName>
            <chance>67</chance>
          </li>          
        </forcedRaceTraitEntries>
        <maxDamageForSocialfight>3</maxDamageForSocialfight>
        <alienPartGenerator>
          <headTypes Inherit="False">
            <li>Female_Beet_Average_Normal</li>
            <li>Male_Beet_Average_Normal</li>
          </headTypes>	
          <bodyTypes>
			<li>Fat</li>
			<li>Hulk</li>
          </bodyTypes>
		  <customDrawSize>(1.05,1.05)</customDrawSize>
          <customHeadDrawSize>(1.05,1.05)</customHeadDrawSize>
          <customPortraitDrawSize>(1.05,1.05)</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(1.05,1.05)</customPortraitHeadDrawSize>
          <colorChannels>
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <li>
                    <weight>5</weight>
                    <min>RGBA(0,102,0)</min>
                    <max>RGBA(10,112,10)</max>
                  </li>
                  <li>
                    <weight>3</weight>
                    <min>RGBA(0,153,76)</min>
                    <max>RGBA(5,153,71)</max>
                  </li>
                  <li>
                    <weight>3</weight>
                    <min>RGBA(75,100,0)</min>
                    <max>RGBA(80,105,5)</max>
                  </li>
                  <li>
                    <weight>1</weight>
                    <min>RGBA(126,170,37)</min>
                    <max>RGBA(120,160,32)</max>
                  </li>
                </options>
              </first>
            </li>
            <li>
              <name>hair</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <li>
                    <weight>5</weight>
                    <min>RGBA(10,50,32)</min>
                    <max>RGBA(50,56,37)</max>
                  </li>
                  <li>
                    <weight>5</weight>
                    <min>RGBA(100,55,0)</min>
                    <max>RGBA(90,35,0)</max>
                  </li>
                </options>
              </first>
            </li>
          </colorChannels>
        </alienPartGenerator>
      </generalSettings>
      <graphicPaths>
          <body>Things/Pawn/Humanlike/Beet/Body/</body>
          <head>Things/Pawn/Humanlike/Beet/Head/</head>
      </graphicPaths>
      <relationSettings>
        <relationChanceModifierSibling>3</relationChanceModifierSibling>
        <renamer>
          <li>
            <relation>Parent</relation>
            <label>Progenitor</label>
            <femaleLabel>Progenitor</femaleLabel>
          </li>
          <li>
            <relation>Child</relation>
            <label>Child</label>
            <femaleLabel>Child</femaleLabel>
          </li>
          <li>
            <relation>Spouse</relation>
            <label>Spouse</label>
            <femaleLabel>Spouse</femaleLabel>
          </li>
          <li>
            <relation>ExSpouse</relation>
            <label>ExSpouse</label>
            <femaleLabel>ExSpouse</femaleLabel>
          </li>
          <li>
            <relation>Sibling</relation>
            <label>Sibling</label>
            <femaleLabel>Sibling</femaleLabel>
          </li>
          <li>
            <relation>Fiance</relation>
            <label>Betrothed</label>
            <femaleLabel>Betrothed</femaleLabel>
          </li>
        </renamer>
      </relationSettings>
    </alienRace>
    <statBases>
      <MarketValue>500</MarketValue>
      <MoveSpeed>4.50</MoveSpeed>
      <Flammability>1.1</Flammability>
      <ComfyTemperatureMin>5</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
      <Mass>40</Mass>
    </statBases>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>16</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>16</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.07</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <thinkTreeMain>Humanlike</thinkTreeMain>
      <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
      <intelligence>Humanlike</intelligence>
      <leatherDef>Leather_Beet</leatherDef>
      <makesFootprints>true</makesFootprints>
      <lifeExpectancy>60</lifeExpectancy>
      <nameCategory>HumanStandard</nameCategory>
      <body>BeetBody</body>
      <baseBodySize>1.1</baseBodySize>
      <baseHealthScale>1.1</baseHealthScale>
      <foodType>OmnivoreHuman</foodType>
      <gestationPeriodDays>15</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(1.01, 0.02)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeStageAges>
        <li>
          <def>HumanlikeBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>HumanlikeChild</def>
          <minAge>3</minAge>
        </li>
        <li MayRequire="Ludeon.RimWorld.Biotech">
          <def>HumanlikePreTeenager</def>
          <minAge>9</minAge>
        </li>
        <li>
          <def>HumanlikeTeenager</def>
          <minAge>13</minAge>
        </li>
        <li>
          <def>HumanlikeAdult</def>
          <minAge>18</minAge>
        </li>
      </lifeStageAges>
      <lifeStageWorkSettings MayRequire="Ludeon.RimWorld.Biotech">
        <Firefighter>7</Firefighter>
        <Patient>0</Patient>
        <Doctor>10</Doctor>
        <PatientBedRest>0</PatientBedRest>
        <Childcare MayRequire="Ludeon.RimWorld.Biotech">0</Childcare>
        <BasicWorker>3</BasicWorker>
        <Warden>10</Warden>
        <Handling>7</Handling>
        <Cooking>7</Cooking>
        <Hunting>7</Hunting>
        <Construction>10</Construction>
        <Growing>7</Growing>
        <Mining>7</Mining>
        <PlantCutting>7</PlantCutting>
        <Smithing>13</Smithing>
        <Tailoring>7</Tailoring>
        <Art>10</Art>
        <Crafting>7</Crafting>
        <Hauling>3</Hauling>
        <Cleaning>3</Cleaning>
        <Research>13</Research>
      </lifeStageWorkSettings>
      <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
      <specialShadowData>
        <volume>(0.3, 0.8, 0.4)</volume>
        <offset>(0,0,-0.3)</offset>
      </specialShadowData>
      <ageGenerationCurve>
        <points>
          <li MayRequire="Ludeon.RimWorld.Biotech">(0,0)</li>
          <li MayRequire="Ludeon.RimWorld.Biotech">(0.001,43)</li>
          <li MayRequire="Ludeon.RimWorld.Biotech">(8,86)</li>
          <li MayRequire="Ludeon.RimWorld.Biotech">(12.5,118)</li>  <!-- Exclude 12.5-13 years to avoid spawning pawns who are very close to becoming adults -->  
          <li MayRequire="Ludeon.RimWorld.Biotech">(12.51,0)</li>  
          <li MayRequire="Ludeon.RimWorld.Biotech">(13,0)</li>      
          <li MayRequire="Ludeon.RimWorld.Biotech">(13.001,122)</li><!-- End exclude -->
          <li MayRequire="Ludeon.RimWorld.Biotech">(13.999,130)</li>
          <li>(14,0)</li>
          <li MayRequire="Ludeon.RimWorld.Biotech">(14.001,130)</li>
          <li>(16,100)</li>
          <li>(50,100)</li>
          <li>(60,30)</li>
          <li>(70,18)</li>
          <li>(80,10)</li>
          <li>(90,3)</li>
          <li>(100,0)</li>
        </points>
      </ageGenerationCurve>
      <hediffGiverSets>
        <li>OrganicStandard</li>
        <li>Human</li>
      </hediffGiverSets>
    </race>
    <recipes>
      <li>InstallPowerClaw</li>
      <li>InstallBionicEye</li>
      <li>InstallBionicArm</li>
      <li>InstallBionicLeg</li>
      <li>InstallSimpleProstheticArm</li>
      <li>InstallSimpleProstheticLeg</li>
      <li>InstallPegLeg</li>
      <li>InstallDenture</li>
      <li>InstallJoywire</li>
      <li>InstallPainstopper</li>
      <li>InstallNaturalHeart</li>
      <li>InstallNaturalLung</li>
      <li>InstallNaturalKidney</li>
      <li>InstallNaturalLiver</li>

      <li>ExciseCarcinoma</li>
      <li>AdministerMechSerumHealer</li>
      <li>RemoveBodyPart</li>
      <li>Euthanize</li>
      <li>Anesthetize</li>
      <li>CureScaria</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">Vasectomy</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ReverseVasectomy</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">TubalLigation</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ExtractOvum</li>
      <li MayRequire="Ludeon.RimWorld.Royalty">CureBloodRot</li>
      <li MayRequire="Ludeon.RimWorld.Royalty">CureAbasia</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ExtractHemogenPack</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">BloodTransfusion</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ImplantXenogerm</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ImplantIUD</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">RemoveIUD</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">TerminatePregnancy</li>
    </recipes>
	<comps>
		<li Class="AnimalBehaviours.CompProperties_InitialHediff">
			<hediffname>HedBeet</hediffname>
		</li>
	</comps>
		<modExtensions>
			<li Class="AnimalBehaviours.AnimalStatExtension">
				<showImageInInfoCard>true</showImageInInfoCard>
				<ImageToShowInInfoCard>UI/Lore/BeetLore</ImageToShowInInfoCard>						
			</li>
		</modExtensions>
  </AlienRace.ThingDef_AlienRace>
  <AlienRace.RaceSettings>
    <defName>BeetRaceSettings</defName>
    <pawnKindSettings>
      <startingColonists>
        <li>
          <pawnKindEntries>
            <li>
              <kindDefs>
                <li>PlayerBeet</li>
              </kindDefs>
              <chance>7.0</chance>
            </li>
          </pawnKindEntries>
          <factionDefs>
            <li>PlayerTribe</li>
          </factionDefs>
        </li>
      </startingColonists>
      <alienslavekinds>
        <li>
          <kindDefs>
            <li>PlayerBeet</li>
          </kindDefs>
          <chance>12.0</chance>
        </li>
      </alienslavekinds>
      <alienrefugeekinds>
        <li>
          <kindDefs>
            <li>PlayerBeet</li>
          </kindDefs>
          <chance>6.0</chance>
        </li>
      </alienrefugeekinds>
      <alienwandererkinds>
        <li>
          <pawnKindEntries>
            <li>
              <kindDefs>
                <li>PlayerBeet</li>
              </kindDefs>
              <chance>10.0</chance>
            </li>
          </pawnKindEntries>
          <factionDefs>
            <li>PlayerColony</li>
            <li>PlayerTribe</li>
          </factionDefs>
        </li>
      </alienwandererkinds>
    </pawnKindSettings>
  </AlienRace.RaceSettings>


</Defs>