<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- Rich -->
	<TraitDef>
		<defName>ST_Rich</defName>
		<commonality>0.7</commonality>
		<forcedPassions>
			<li>Social</li>
		</forcedPassions>
		<requiredWorkTags>
			<li>Social</li>
		</requiredWorkTags>
		<degreeDatas>
			<li>
				<label>rich</label>
				<description>I'm rich you know</description>
				<skillGains>
					<li>
						<key>Social</key>
						<value>4</value>
					</li>
				</skillGains>
				<statOffsets>
					<TradePriceImprovement>0.30</TradePriceImprovement>
				</statOffsets>
			</li>
		</degreeDatas>
	</TraitDef>
	
<!-- Stupid -->
	<TraitDef>
		<defName>ST_Stupid</defName>
		<commonality>0.7</commonality>
		<degreeDatas>
			<li>
				<label>stupid</label>
				<description>wuh?</description>
				<skillGains>
					<li>
						<key>Intellectual</key>
						<value>-4</value>
					</li>
				</skillGains>
				<statOffsets>
					<GlobalLearningFactor>-0.25</GlobalLearningFactor>
					<ResearchSpeed>-0.5</ResearchSpeed>
					<TradePriceImprovement>-0.20</TradePriceImprovement>
					<WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
				</statOffsets>
			<marketValueFactorOffset>-0.1</marketValueFactorOffset>
			</li>			
		</degreeDatas>
		<conflictingTraits>
			<li>TooSmart</li>
			<li>FastLearner</li>
		</conflictingTraits>
	</TraitDef>	
	<ThoughtDef>
		<defName>StupidThought</defName>
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>ST_Stupid</li>
		</requiredTraits>
		<stages>
			<li>
				<label>stupid</label>
				<description>I am too stupid to be sad.</description>
				<baseMoodEffect>15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
<!-- Semi-Feral -->	
	
	<TraitDef>
		<defName>ST_SemiFeral</defName>
		<commonality>0.45</commonality>
		<degreeDatas>
			<li>
				<label>Semi-Feral</label>
				<description>Bunga.</description>
				<skillGains>
					<li>
						<key>Intellectual</key>
						<value>-3</value>
					</li>
					<li>
						<key>Social</key>
						<value>-5</value>
					</li>
				</skillGains>
				<statOffsets>
					<ResearchSpeed>-0.5</ResearchSpeed>
					<TradePriceImprovement>-0.50</TradePriceImprovement>
					<WorkSpeedGlobal>0.15</WorkSpeedGlobal>
				</statOffsets>
			<randomMentalState>Berserk</randomMentalState>
			<randomMentalStateMtbDaysMoodCurve>
			  <points>
				<li>(0, 60)</li>
			  </points>
			</randomMentalStateMtbDaysMoodCurve>
			<marketValueFactorOffset>-0.15</marketValueFactorOffset>
			<allowedMeditationFocusTypes><li>Natural</li></allowedMeditationFocusTypes>				
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>FastLearner</li>
			<li>ST_Rich</li>
			<li>TooSmart</li>
		</conflictingTraits>
	</TraitDef>	
	<ThoughtDef>
		<defName>FeralThought</defName>
		<workerClass>ThoughtWorker_AlwaysActive</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>ST_SemiFeral</li>
		</requiredTraits>
		<stages>
			<li>
				<label>feral</label>
				<description>Unga bunga</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>	
	
<!-- Rock Expert -->		

	<TraitDef>
		<defName>ST_RockExpert</defName>
		<commonality>0.3</commonality>
		<forcedPassions>
			<li>Mining</li>
		</forcedPassions>
		<degreeDatas>
			<li>
				<label>Rock Expert</label>
				<description>I know everything there is to know about rocks (and minerals too).</description>
				<skillGains>
					<li>
						<key>Mining</key>
						<value>4</value>
					</li>
				</skillGains>
				<statOffsets>
					<MiningYield>0.3</MiningYield>
				</statOffsets>	
			</li>
		</degreeDatas>
	</TraitDef>						

<!-- Rincewind -->
	<TraitDef>
		<defName>ST_Rincewind</defName>
		<commonality>0.7</commonality>
		<degreeDatas>
			<li>
				<label>runner</label>
				<description>"Dead is only for once, but running away is for ever." 
		-Noted Runner</description>
				<statOffsets>
					<MoveSpeed>0.50</MoveSpeed>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
		  <li>SpeedOffset</li>
		</conflictingTraits>
	</TraitDef>	

<!-- Savant -->

	<TraitDef>
		<defName>ST_Savant</defName>
		<commonality>0.35</commonality>
		<degreeDatas>
			<li>
				<label>Savant</label>
				<description>[PAWN_nameDef] is exceptionally gifted at research, but almost completely incapable of socializing.</description>
				<skillGains>
					<li>
						<key>Intellectual</key>
						<value>8</value>
					</li>
					<li>
						<key>Social</key>
						<value>-12</value>
					</li>
				</skillGains>
				<statOffsets>
					<ResearchSpeed>2</ResearchSpeed>
					<TradePriceImprovement>-0.80</TradePriceImprovement>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>ST_Stupid</li>
			<li>SlowLearner</li>
		</conflictingTraits>
		<requiredWorkTags>
		  <li>Intellectual</li>
		</requiredWorkTags>
	</TraitDef>		

<!-- Mad Surgeon -->
	<TraitDef>
		<defName>ST_Surgeon</defName>
		<commonality>0.35</commonality>
		<forcedPassions>
			<li>Medicine</li>
		</forcedPassions>
		<requiredWorkTags>
			<li>Caring</li>
		</requiredWorkTags>
		<degreeDatas>
			<li>
				<label>Mad Doctor</label>
				<description>[PAWN_nameDef] has a passion for medical work. Unfortunately, [PAWN_possessive] enthusiasm is not matched by skill. As a result [PAWN_pronoun] can tend wounds quickly, but not effectively.</description>
				<skillGains>
					<li>
						<key>Medicine</key>
						<value>4</value>
					</li>
				</skillGains>
				<statOffsets>
			<MedicalTendQuality>-1.5</MedicalTendQuality>
			<MedicalTendSpeed>1.5</MedicalTendSpeed>
			<MedicalOperationSpeed>1.5</MedicalOperationSpeed>
				</statOffsets>
			</li>
		</degreeDatas>
	</TraitDef>
	
	
	
	
	
	
	
	
	
	
</Defs>
