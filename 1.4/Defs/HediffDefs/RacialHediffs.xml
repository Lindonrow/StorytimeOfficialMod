<Defs>
 <HediffDef>
    <defName>HedBeet</defName>
    <label>Racial Trait: Beet Toughness</label>
	<description>Beets are known for their strength and resistance to pain.</description>		
    <initialSeverity>1</initialSeverity>
  	<defaultLabelColor>(0.47,0.87,0.47)</defaultLabelColor>      	
	<hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <stages>
      <li>
        <painFactor>0.85</painFactor>
		<painOffset>-0.1</painOffset>
		<statOffsets>
			<CarryingCapacity>20</CarryingCapacity>
			<MeleeHitChance>5</MeleeHitChance>
		</statOffsets>		
      </li>
    </stages>
  </HediffDef>
  
