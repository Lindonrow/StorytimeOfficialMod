		<description>Ate a bean flavor jelly bean! Huh. \n\n&lt;color=#F27893&gt;Bean effect:&lt;/color&gt; It's a bean.</description>		
		<initialSeverity>1</initialSeverity>
		<defaultLabelColor>(200,150,150)</defaultLabelColor>      	
		<hediffClass>HediffWithComps</hediffClass>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>60000</disappearsAfterTicks>
				<showRemainingTime>True</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<label>Ultra-Rare</label>
				<minSeverity>0</minSeverity>
			</li>
		</stages>
	</HediffDef>    
	
	
	
	
	
	
	
	
	
	
	
	
