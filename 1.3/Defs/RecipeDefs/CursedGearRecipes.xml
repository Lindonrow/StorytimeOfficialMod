<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<RecipeDef>
    <defName>MeltCoins</defName>
    <label>Melt haunted coins</label>
    <description>Melt down haunted coins to obtain gold.</description>    
	<jobString>Melt gold coins.</jobString>
    <workAmount>1000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
	<researchPrerequisite>Smithing</researchPrerequisite>
	<recipeUsers>
      <li>ElectricSmelter</li>      
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
					<thingDefs>
						<li>CursedCoin</li>
					</thingDefs>
        </filter>
        <count>30</count>
      </li>
     </ingredients>
     <fixedIngredientFilter>
					<thingDefs>
						<li>CursedCoin</li>
					</thingDefs>
     </fixedIngredientFilter>
     <defaultIngredientFilter>
					<thingDefs>
						<li>CursedCoin</li>
					</thingDefs>
     </defaultIngredientFilter>
	 <products>
 		<Gold>15</Gold>
 	</products>
</RecipeDef>

  
<RecipeDef>
    <defName>MakeCursedCutlass</defName>
    <label>Forge haunted cutlass</label>
    <description>Forge a cutlass and imbue it with spiritual power by adding cursed coins.</description>    
	<jobString>Forge a haunted cutlass.</jobString>
    <workAmount>12500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
	<researchPrerequisite>magicPirateCrafting</researchPrerequisite>
	<recipeUsers>
      <li>ElectricSmithy</li>      
	  <li>FueledSmithy</li>
    </recipeUsers>
    <skillRequirements>
			<Crafting>10</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
					<thingDefs>
						<li>CursedCoin</li>
					</thingDefs>
        </filter>
        <count>30</count>
      </li>
	  <li>
        <filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
        </filter>
        <count>100</count>
      </li>
     </ingredients>
     <fixedIngredientFilter>
					<thingDefs>
						<li>Steel</li>
						<li>CursedCoin</li>
					</thingDefs>
     </fixedIngredientFilter>
     <defaultIngredientFilter>
					<thingDefs>
						<li>Steel</li>
						<li>CursedCoin</li>
					</thingDefs>
     </defaultIngredientFilter>
	 <products>
 		<CursedCutlass>1</CursedCutlass>
 	</products>
</RecipeDef>

