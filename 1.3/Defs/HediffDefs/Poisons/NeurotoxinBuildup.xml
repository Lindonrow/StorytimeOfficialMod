<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>NeurotoxinBuildup</defName>
    <label>paralyzing neurotoxin buildup</label>
    <description>An insidious form of poison which targets the movement centers of the brain, causing the muscles to lock up. At high doses, the victim will be completely paralyzed. While this is usually non-fatal, high doses of this poison frequently have permanent effects on the central nervous system.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.57, 0.43, 0.80)</defaultLabelColor>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.09</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>slowed</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>stiffening</label>
        <minSeverity>0.40</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>ChemicalDamageModerate</hediff>
            <mtbDays>14</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>seizing</label>
        <minSeverity>0.60</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>ChemicalDamageModerate</hediff>
            <mtbDays>10</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>paralyzed</label>
        <minSeverity>0.80</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>ChemicalDamageModerate</hediff>
            <mtbDays>6</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>
  
  
  
  
  
</Defs>