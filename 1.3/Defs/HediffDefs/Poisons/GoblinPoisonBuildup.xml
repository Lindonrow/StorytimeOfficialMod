<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>GoblinPoisonBuildup</defName>
    <label>goblin poison buildup</label>
    <description>Goblin poison in the bloodstream. This particular poison is rather strange. Crafted with odd ingredients by some goblin somewhere, there's no telling what might happen...</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.3, 0.6, 0.3)</defaultLabelColor>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.1</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <painOffset>0.05</painOffset>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <painOffset>0.1</painOffset>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <painOffset>0.15</painOffset>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>ChemicalDamageModerate</hediff>
            <mtbDays>22</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <painOffset>0.25</painOffset>
        <hediffGivers>

          <li Class="HediffGiver_Random">
            <hediff>ChemicalDamageModerate</hediff>
            <mtbDays>20</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <painOffset>0.65</painOffset>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>ChemicalDamageModerate</hediff>
            <mtbDays>18</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>
  
</Defs>