<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="BaseWeaponFrogMan" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Neolithic</techLevel>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smelt</effectWorking>
      <soundWorking>Recipe_MakeBow</soundWorking>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

  <DamageDef>
    <defName>BlowDartPoison</defName>
    <label>blow dart</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <additionalHediffs>
      <li>
        <hediff>ToxicBuildup</hediff>
        <severityPerDamageDealt>0.01</severityPerDamageDealt>
        <victimSeverityScaling>ToxicSensitivity</victimSeverityScaling>
        <victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
      </li>
    </additionalHediffs>
    <deathMessage>{0} has been shot to death.</deathMessage>
    <hediff>Cut</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
  </DamageDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>BlowGunDart</defName>
    <label>dart</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>BlowDartPoison</damageDef>
      <damageAmountBase>3</damageAmountBase>
      <speed>50</speed>
    </projectile>
  </ThingDef>  
  
  <ThingDef ParentName="BaseWeaponFrogMan">
    <defName>BlowGun</defName>
    <label>blow gun</label>
    <description>Blow on it to shoot a dart or something. Often used by frogmen.</description>
    <weaponTags>
      <li>FrogmanRanged</li>
      <li>NeolithicRangedBasic</li>
    </weaponTags>
    <thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <burnableByRecipe>true</burnableByRecipe>
    <graphicData>
      <texPath>Things/Items/FrogWeapons/BlowGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <costList>
      <WoodLog>15</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.4</AccuracyMedium>
      <AccuracyLong>0.1</AccuracyLong>
      <RangedWeapon_Cooldown>1.00</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BlowGunDart</defaultProjectile>
        <warmupTime>0.65</warmupTime>
        <range>12</range>
        <soundCast>BlowGunSound</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>blow gun</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
	<li Class="Reloading.CompProperties_Reloadable">
		<compClass>Reloading.CompReloadable</compClass>
		<MaxShots>1</MaxShots>
		<AmmoFilter>
			<thingDefs>
				<li>Poison</li>
			</thingDefs>
		</AmmoFilter>
		<ItemsPerShot>1</ItemsPerShot>
		<ReloadTimePerShot>0.1</ReloadTimePerShot>
		<ReloadSound>BlowGunSound</ReloadSound>
		<NewVerbClass>Verb_Shoot</NewVerbClass>
		<GenerateAmmo>
			<Poison>4~16</Poison>
		</GenerateAmmo>
	</li>
    </comps>
  </ThingDef>
  
  
    <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>FrogSpear</defName>
    <label>frogman spear</label>
    <description>A spear used frequently by the frog people, coated in poison.</description>
    <graphicData>
      <texPath>Things/Items/FrogWeapons/FrogSpear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
	<weaponTags>
      <li>FrogmanMelee</li>
    </weaponTags>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Poison>50</Poison>
    </costList>    
	<thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.2</Mass>
    </statBases>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>PoisonSpear</li>
        </capacities>
        <power>10</power>
        <armorPenetration>0.50</armorPenetration>
        <cooldownTime>2.0</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>PoisonSpear</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
	<comps>
	  <li>
		<compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
	  </li>
    </comps>
  </ThingDef>  
  
  
  
  
  
  
  
  
  
  
