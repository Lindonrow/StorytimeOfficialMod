<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="ApparelGnomeBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <researchPrerequisite>gnomeCulture</researchPrerequisite>
	  <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
 
    <ThingDef ParentName="ApparelGnomeBase">
    <defName>GnomeHat</defName>
    <label>gnome hat</label>
    <description>Stylish, by gnome child standards.</description>
    <recipeMaker>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/GnomeHat/GnomeHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <Insulation_Cold>3.5</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <costList>
      <Gnome_Cloth>30</Gnome_Cloth>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>GnomeClothing</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
	  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/GnomeHat/GnomeHat</wornGraphicPath>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(69,193,69)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

