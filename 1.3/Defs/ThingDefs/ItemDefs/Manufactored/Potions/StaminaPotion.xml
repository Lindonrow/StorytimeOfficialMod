<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PotionBase">
		<defName>StaminaPotion</defName>
		<label>stamina potion</label>
		<description>A potion of stamina.</description>
		<graphicData>
		<texPath>Things/Items/Resources/Potions/StaminaPotion</texPath>
		<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
		<DeteriorationRate>0.25</DeteriorationRate>
		<MarketValue>125</MarketValue>
		<Mass>0.3</Mass>
		<WorkToMake>900</WorkToMake>
		<Nutrition>0</Nutrition>
		</statBases>
		<ingestible>
		<preferability>NeverForNutrition</preferability>
        <ingestSound>Ingest_Beer</ingestSound>
		<outcomeDoers>
			<li Class="IngestionOutcomeDoer_GiveHediff">
			<hediffDef>HedStaminaPotion</hediffDef>
			<severity>1</severity>
			</li>
			<li Class="IngestionOutcomeDoer_OffsetNeed">
			  <need>Rest</need>
			  <offset>1</offset>
			</li>
		</outcomeDoers>
		</ingestible>
	</ThingDef>
	
 <HediffDef>
    	<defName>HedStaminaPotion</defName>
    	<label>Consumed Stamina Potion</label>
		<description>Drank a stamina potion!</description>		
    	<initialSeverity>1</initialSeverity>
  	<defaultLabelColor>(200,80,80)</defaultLabelColor>      	<hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>60000</disappearsAfterTicks>
        <showRemainingTime>True</showRemainingTime>
      </li>
    </comps>
    <stages>
        <li>
          <minSeverity>0</minSeverity>
          <label>Stamina Potion</label>
		  <restFallFactorOffset>-1</restFallFactorOffset>
        </li>
      </stages>
  </HediffDef>	
	



</Defs>