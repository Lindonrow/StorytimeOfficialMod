<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="ApparelPirateBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <researchPrerequisite>pirateCrafting</researchPrerequisite>
	  <recipeUsers>
        <li>ElectricTailoringBench</li> 
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
 
    <ThingDef ParentName="ApparelPirateBase">
    <defName>PirateHat</defName>
    <label>pirate officer's hat</label>
    <description>You can tell it's a pirate hat because of the skull on the front.</description>
    <recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PirateClothing/Tricorn/Tricorn</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <Insulation_Cold>3.5</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <costList>
      <Cloth>30</Cloth>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>RichPirateClothing</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
	  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PirateClothing/Tricorn/Tricorn</wornGraphicPath>
    </apparel>
	
  </ThingDef>

    <ThingDef ParentName="ApparelPirateBase">
    <defName>PirateBandana</defName>
    <label>pirate bandana</label>
    <description>For lower class pirates.</description>
    <recipeMaker>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PirateClothing/Bandana/Bandana</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <Insulation_Cold>3.5</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
	<costStuffCount>25</costStuffCount>
	<stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <apparel>
	  <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>PoorPirateClothing</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
	  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PirateClothing/Bandana/Bandana</wornGraphicPath>
	  <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>