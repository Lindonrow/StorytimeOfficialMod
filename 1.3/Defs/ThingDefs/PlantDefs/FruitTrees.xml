<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--=========================== Fruit Trees ==============================-->

	<ThingDef ParentName="TreeBase">
		<defName>ST_CookingAppleTree</defName>
		<label>apple tree</label>
		<description>A tree with little green apples on it.</description>
		<graphicData>
			<texPath>Things/Plants/AppleTree</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<statBases>
			<Beauty>2</Beauty>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<ingestible/>
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<growDays>25</growDays>
			<visualSizeRange>1~2.2</visualSizeRange>
			<sowMinSkill>5</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.71</fertilityMin>
			<topWindExposure>0.15</topWindExposure>
			<mustBeWildToSow>true</mustBeWildToSow>
			<immatureGraphicPath>Things/Plants/AppleTreeImmature</immatureGraphicPath>
			<leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
			<harvestWork>500</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestYield>30</harvestYield>
			<harvestedThingDef>CookingApple</harvestedThingDef>
			<harvestFailable>true</harvestFailable>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
		    <wildBiomes>
			  <TemperateForest>0.06</TemperateForest>
			  <TemperateSwamp>0.01</TemperateSwamp>
			  <BorealForest>0.01</BorealForest>
			  <ColdBog>0.01</ColdBog>
			  <AridShrubland>0.01</AridShrubland>
		    </wildBiomes>
		</plant>
	</ThingDef>
	
