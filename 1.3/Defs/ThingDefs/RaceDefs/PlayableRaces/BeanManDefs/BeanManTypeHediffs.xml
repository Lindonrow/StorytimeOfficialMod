<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Red -->

 <HediffDef>
    <defName>HedRedBeanMan</defName>
    <label>Racial Trait: Standard Bean</label>
	<description>Red bean men are the most standard bean man color. They tend to be friendly and they have an affinity towards plants, but are not generally good workers otherwise.</description>		
    <initialSeverity>1</initialSeverity>
  	<defaultLabelColor>(0.47,0.87,0.47)</defaultLabelColor>      	
	<hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <stages>
      <li>
		<statOffsets>
			  <PlantWorkSpeed>0.15</PlantWorkSpeed>
			  <SocialImpact>0.10</SocialImpact>
			  <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
		</statOffsets>		
      </li>
    </stages>
  </HediffDef>    
  
  <ThoughtDef>
    <defName>ThoughtRedBeanMan</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>HedRedBeanMan</hediff>
    <stages>
      <li>
        <label>Red Bean Man</label>
        <description>What could be better than being a bean man?</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

<!-- Bulborb -->

 <HediffDef>
    <defName>HedBulborbBeanMan</defName>
    <label>Racial Trait: Bulborb Bean</label>
	<description>Bulborb Bean Men are much better with animals than other bean men, but are not very good with plant work.</description>		
    <initialSeverity>1</initialSeverity>
  	<defaultLabelColor>(0.47,0.87,0.47)</defaultLabelColor>      	
	<hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <stages>
      <li>
		<statOffsets>
			  <PlantWorkSpeed>-0.25</PlantWorkSpeed>
			  <PlantHarvestYield>-0.15</PlantHarvestYield>
		</statOffsets>		
		<statFactors>
			  <TameAnimalChance>1.2</TameAnimalChance>
			  <TrainAnimalChance>1.2</TrainAnimalChance>
			  <BondAnimalChanceFactor>2</BondAnimalChanceFactor>
		</statFactors>		
      </li>
    </stages>
  </HediffDef>
  
<!-- Shiny -->
  
 <HediffDef>
    <defName>HedShinyBeanMan</defName>
    <label>Racial Trait: Shiny Bean</label>
	<description>A truly rare shiny bean man. Hold him close.</description>		
    <initialSeverity>1</initialSeverity>
  	<defaultLabelColor>(255,215,0)</defaultLabelColor>      	
	<hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <stages>
      <li>
		<statOffsets>
			  <WorkSpeedGlobal>2</WorkSpeedGlobal>
			  <MoveSpeed>1.5</MoveSpeed>
			  <SocialImpact>2</SocialImpact>
		      <MeleeDodgeChance>25</MeleeDodgeChance>
			  <PawnBeauty>2</PawnBeauty>
		</statOffsets>		
      </li>
    </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>ThoughtShinyBeanMan</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>HedShinyBeanMan</hediff>
    <stages>
      <li>
        <label>Shiny Bean Man</label>
        <description>I am a king amongst bean men. Truly the pinnacle of creation.</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
