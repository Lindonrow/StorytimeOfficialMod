<!-- Purple -->  
 <HediffDef>
    <defName>HedPurpleBeanMan</defName>
    <label>Racial Trait: Magic Bean</label>
	<description>Purple bean men are significantly more attuned to the flow of magic and psychic energy around them, for better and for worse.</description>		
    <initialSeverity>1</initialSeverity>
  	<defaultLabelColor>(0.47,0.87,0.47)</defaultLabelColor>      	
	<hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <stages>
      <li>
		<statOffsets>	
          <PsychicSensitivity>0.5</PsychicSensitivity>
		</statOffsets>	
      </li>
    </stages>
	<modExtensions>
		<li Class="TorannMagic.TMDefs.DefModExtension_HediffEnchantments">
			<stages>
				<li>
					<minSeverity>0</minSeverity>
					<maxSeverity>100</maxSeverity>
					<enchantments>
						<mpRegenRate>0.5</mpRegenRate>
						<arcaneDmg>0.1</arcaneDmg>
						<maxMP>0.25</maxMP>
					</enchantments>
				</li>
			</stages>
		</li>
	</modExtensions>
  </HediffDef>  
  
