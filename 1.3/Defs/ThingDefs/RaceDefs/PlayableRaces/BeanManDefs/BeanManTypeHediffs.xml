<!-- Coffee -->
 <HediffDef>
    <defName>HedCoffeeBeanMan</defName>
    <label>Racial Trait: Manic Bean</label>
	<description>Coffee bean men operate in a constant manic state- moving and working quickly, but also nearly always on the edge of a breakdown.</description>		
    <initialSeverity>1</initialSeverity>
  	<defaultLabelColor>(0.47,0.87,0.47)</defaultLabelColor>      	
	<hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <stages>
      <li>
		<statOffsets>	
