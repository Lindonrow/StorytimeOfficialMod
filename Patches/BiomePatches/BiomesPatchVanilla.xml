	Sandstone
	Slate
	Marble
	-->

<!-- Warm Biomes -->

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>*/BiomeDef[defName="TropicalRainforest"]</xpath>
				<value>
					<modExtensions>
						<li Class="RockSettings.DefModExtension_BiomeSettings">
							<rockCount>1~3</rockCount>
							<allowedRockDefs>
								<li>Granite</li>
								<li>Limestone</li>
								<li>Slate</li>
